<jobs batch="sge">
 <job name="bmn_simdb">
  <macro path="$VMCWORKDIR/macro/run/run_sim_bmn.C">
   <file sim_input="energy=-3,gen=urqmd" output="$VMCWORKDIR/macro/run/evetest_${file_name}.root" start_event="0" event_count="1"/>
  </macro>
  <run mode="global" count="0" config="~/bmnroot/build/config.sh"/>
 </job>
 <job name="bmn_recdb" dependency="bmn_simdb">
  <macro path="$VMCWORKDIR/macro/run/run_reco_bmn.C">
   <file job_input="simulation" output="$VMCWORKDIR/macro/run/bmndst_${file_name:~8}.root" start_event="0" event_count="1"/>
  </macro>
  <run mode="global" count="0" config="~/bmnroot/build/config.sh"/>
 </job>
</jobs>
